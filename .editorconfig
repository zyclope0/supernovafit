# EditorConfig for SuperNovaFit
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.{css,scss}]
indent_size = 2

[Makefile]
indent_style = tab

[*.py]
indent_size = 4

[*.go]
indent_style = tab

[*.rs]
indent_size = 4

[{package.json,package-lock.json}]
indent_size = 2

[*.html]
indent_size = 2

[*.xml]
indent_size = 2
