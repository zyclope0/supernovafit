+import { cn } from '@/lib/utils'
+
+interface SkeletonLoaderProps {
+  lines?: number
+  className?: string
+  variant?: 'text' | 'card' | 'avatar' | 'chart'
+}
+
+export function SkeletonLoader({ 
+  lines = 3, 
+  className,
+  variant = 'text' 
+}: SkeletonLoaderProps) {
+  if (variant === 'card') {
+    return (
+      <div className={cn('animate-pulse', className)} role="status" aria-live="polite">
+        <span className="sr-only">Chargement en cours...</span>
+        <div className="bg-gray-200 rounded-lg p-4">
+          <div className="h-6 bg-gray-300 rounded w-3/4 mb-4" />
+          <div className="h-4 bg-gray-300 rounded w-full mb-2" />
+          <div className="h-4 bg-gray-300 rounded w-5/6" />
+        </div>
+      </div>
+    )
+  }
+  
+  if (variant === 'avatar') {
+    return (
+      <div className={cn('animate-pulse', className)} role="status">
+        <div className="h-12 w-12 bg-gray-200 rounded-full" />
+      </div>
+    )
+  }
+  
+  if (variant === 'chart') {
+    return (
+      <div className={cn('animate-pulse h-64 bg-gray-200 rounded-lg', className)} role="status">
+        <span className="sr-only">Chargement du graphique...</span>
+      </div>
+    )
+  }
+  
+  return (
+    <div className={cn('animate-pulse space-y-2', className)} role="status" aria-live="polite">
+      <span className="sr-only">Chargement en cours...</span>
+      {[...Array(lines)].map((_, i) => (
+        <div key={i} className={cn(
+          'h-4 bg-gray-200 rounded',
+          i === lines - 1 && 'w-4/5'
+        )} />
+      ))}
+    </div>
+  )
+}

